<h1>Modifier le mot de passe</h1>
<%= form_with model: Current.adherent, url: edit_password_path do |f| %>
  <p>
  <%= f.label 'password:'%><br>
  <%= f.password_field :password %>
  </p>
  <p>
  <%= f.label 'password_confirmation:'%><br>
  <%= f.password_field :password_confirmation %>
  </p>
  <p>
  <%= f.submit 'Update' %>
  </p>
<% end %>